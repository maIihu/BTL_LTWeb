@model web1.Models.Sanpham

@{
    ViewData["Title"] = "ChiTietGiay";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6 text-center">
            <img src="~/img/AnhGiay/@Model.AnhBia" alt="Ảnh sản phẩm" class="img-fluid rounded shadow-sm">
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <h3 class="text-dark mb-3">@Model.TenGiay</h3>
            <p class="text-muted mb-3">Mã sản phẩm: @Model.MaGiay</p>
            <b class="text-danger mb-4">Giá Thành: @String.Format("{0:0,0}", Model.GiaBan) đ</b>

            <!-- Form thêm sản phẩm vào giỏ hàng -->
            <form asp-action="AddToCart" asp-controller="GioHang" method="post">
                <!-- Hidden field để lưu mã sản phẩm -->
                <input type="hidden" name="MaGiay" value="@Model.MaGiay" />


                <!-- Chọn size giày -->
                <div class="form-group mt-3">
                    <label class="form-label"><strong>Chọn size giày:</strong></label>
                    <select name="Size" class="form-control" required>
                        @for (int size = 38; size <= 44; size++)
                        {
                            <option value="@size">@size</option>
                        }
                    </select>
                </div>

                <!-- Chọn số lượng -->
                <div class="form-group mt-3">
                    <label for="soLuong" class="form-label"><strong>Chọn số lượng:</strong></label>
                    <input type="number" name="SoLuong" id="soLuong" class="form-control" min="1" value="1" style="width: 100px;" required />
                </div>

                <!-- Nút thêm vào giỏ hàng -->
                <button type="submit" class="btn btn-success mt-3">Thêm vào giỏ hàng</button>
            </form>

            <!-- Nút Thêm vào danh mục ưa thích -->
            <button id="add-to-favorites" type="button" class="btn btn-outline-danger mt-3 ml-2">
                <i class="fas fa-heart"></i> Thêm vào yêu thích
            </button>
        </div>
    </div>
</div>
