@{
    ViewData["Title"] = "DangNhap";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model web1.Models.Khachhang

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center font-weight-bold">ĐĂNG NHẬP</h4>

            <!-- Validation summary to show general errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-controller="User" asp-action="DangNhap" method="post">


                <div class="form-group">
                    <label>Tên đăng nhập<span class="text-danger">*</span></label>
                    <input asp-for="TaiKhoanKh" class="form-control" />
                    <span asp-validation-for="TaiKhoanKh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Mật khẩu<span class="text-danger">*</span></label>
                    <input asp-for="MatKhau" type="password" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a href="#">Quên mật khẩu?</a>
                </div>

                <div class="text-center">
                    <input type="submit" value="Đăng nhập" class="btn btn-success" />
                </div>
            </form>

        </div>
    </div>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h5 class="text-muted">Đăng ký tài khoản</h5>
            <div class="mt-3">
                <a href="@Url.Action("Dangky", "User")" class="btn btn-primary">Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>
