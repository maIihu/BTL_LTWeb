@{
    ViewData["Title"] = "DangNhap";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@model web1.Models.Khachhang

<div class="login">
    <div class="wrap">
        <div class="col-md-3 offset-md-4"> 

            @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="login-title border rounded p-2"> <!-- Giảm padding -->
                        <h4 class="title text-center font-weight-bold" style="font-size: 20px;">ĐĂNG NHẬP</h4>
                        <div class="comments-area">
                            <div class="form-group">
                                <label for="TaiKhoanKh" class="control-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(m => m.TaiKhoanKh, new { @class = "form-control", @placeholder = "Nhập tên đăng nhập" })
                            @Html.ValidationMessageFor(m => m.TaiKhoanKh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="MatKhau" class="control-label">Mật khẩu <span class="text-danger">*</span></label>
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <p id="login-form-remember" class="text-center">
                                <a href="#">Quên mật khẩu?</a>
                            </p>
                            <div class="text-center">
                                <input type="submit" value="Đăng nhập" class="btn btn-success btn-lg rounded-pill"> <!-- Nút lớn với viền tròn -->
                            </div>
                        </div>
                    </div>
            }

            <div class="clear mb-4"></div> <!-- Thêm khoảng cách giữa các phần -->

            <h4 class="title text-center" style="font-size: 18px; margin-top: 30px;">BẠN CHƯA CÓ TÀI KHOẢN?</h4> <!-- Điều chỉnh kích thước -->
            <div class="text-center mb-3">
                <a href="@Url.Action("Dangky", "User")"> <!-- Nút lớn với viền tròn -->
                    Đăng ký ngay
                </a>
            </div>

        </div>
    </div>
</div>
