@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>DASHMIN</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="" name="keywords">
	<meta content="" name="description">

	<!-- Favicon -->
	<link href="~/LayouAdmin/~/LayouAdmin/imgfavicon.ico" rel="icon">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="~/LayouAdmin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
	<link href="~/LayouAdmin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/LayouAdmin/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="~/LayouAdmin/css/style.css" rel="stylesheet">

	<style>
		.sidebar {
			width: 350px;
			transition: all 0.3s ease;
		}

			.sidebar.hidden {
				width: 0;
				overflow: hidden;
			}

		.content {
			margin-left: 350px;
			transition: all 0.3s ease;
		}

		.sidebar.hidden + .content {
			margin-left: 0;
		}

	</style>
</head>

<body>
	<div class="container-fluid position-relative bg-white d-flex p-0">
		<!-- Spinner Start -->
		<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
			<div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
				<span class="sr-only">Loading...</span>
			</div>
		</div>
		<!-- Spinner End -->
		<!-- Sidebar Start -->
		<div class="sidebar pe-4 pb-3">
			<nav class="navbar bg-light navbar-light">
				<a href="index.html" class="navbar-brand mx-4 mb-3">
					<h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>DASHMIN</h3>
				</a>
				<div class="d-flex align-items-center ms-4 mb-4">
					<div class="position-relative">
						<img class="rounded-circle" src="~/img/default.jpg" alt="" style="width: 40px; height: 40px;">
						<div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
					</div>
					<div class="ms-3">
						<h6 class="mb-0">Nguyễn Mạnh Hùng</h6>
						<span>Admin</span>
					</div>
				</div>
				<div class="navbar-nav w-100">
					<a href="@Url.Action("TrangChu", "HomeAdmin" , new { area="Admin" })" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Trang chủ</a>
					<div class="nav-item dropdown">
						<a href="@Url.Action("DanhMucSanPham", "HomeAdmin", new { area = "admin", page = 1 })" class="nav-item nav-link">
							<i class="fa fa-box-open me-2"></i>Quản lý sản phẩm
						</a>
						<a href="@Url.Action("DonHang", "QuanLyDonHang", new { area = "admin"})" class="nav-item nav-link">
							<i class="fa fa-shopping-cart me-2"></i>Quản lý đơn hàng
						</a>
						<a href="@Url.Action("Index", "KhachHangs", new { area = "Admin"})" class="nav-item nav-link">
							<i class="fa fa-users me-2"></i>Quản lý khách hàng
						</a>
						<a href="@Url.Action("Index", "NhanViens", new { area = "Admin"})" class="nav-item nav-link">
							<i class="fa fa-user-friends me-2"></i>Quản lý nhân viên
						</a>
						<a href="@Url.Action("DanhSachYKien", "QuanLyYKienKhachHang", new {area ="Admin"})" class="nav-item nav-link">
							<i class="fa fa-comments me-2"></i>Quản lý ý kiến khách hàng
						</a>
						<a href="@Url.Action("Index", "QuanLyDoanhThu", new {Area = "Admin"})" class="nav-item nav-link">
							<i class="fa fa-chart-line me-2"></i>Thống kê doanh thu
						</a>
					</div>
				</div>
			</nav>
		</div>
		<!-- Sidebar End -->
		<!-- Content Start -->
		<div class="content">
			<!-- Navbar Start -->
			<nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
				<a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
					<h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
				</a>
				<a href="#" class="sidebar-toggler flex-shrink-0">
					<i class="fa fa-bars"></i>
				</a>

				<form asp-controller="Admin" asp-action="DanhMucSanPham" method="get">
					<div class="input-group">
						<!-- Thanh nhập tên giày -->
						<input type="text" name="tenGiay" class="form-control" placeholder="Tìm tên giày" value="@ViewData["SearchTerm"]" />

						<!-- Lọc theo giá -->
						<input type="number" name="from" class="form-control" placeholder="Giá tối thiểu" value="@ViewData["FromPrice"]" />
						<input type="number" name="to" class="form-control" placeholder="Giá tối đa" value="@ViewData["ToPrice"]" />

						<!-- Nút lọc -->
						<button type="submit" class="btn btn-primary">Tìm</button>
					</div>
				</form>

				<div class="navbar-nav align-items-center ms-auto">
					<div class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
							<img class="rounded-circle me-lg-2" src="~/img/default.jpg" alt="" style="width: 40px; height: 40px;">
							<span class="d-none d-lg-inline-flex">Nguyễn Mạnh Hùng</span>
						</a>
						<div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
							<a href="@Url.Action("HoSo", "AdminAccout", new { area = "admin" })" class="dropdown-item">Hồ sơ</a>
							<a href="@Url.Action("DangXuat", "User")" class="dropdown-item">Đăng xuất</a>
						</div>
					</div>
				</div>
			</nav>
			<!-- Navbar End -->
			<!-- Blank Start -->
			@RenderBody()
			<!-- Blank End -->
			<!-- Footer Start -->
			
			<!-- Footer End -->
		</div>
		<!-- Content End -->
		<!-- Back to Top -->
		<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
	</div>

	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/LayouAdmin/lib/chart/chart.min.js"></script>
	<script src="~/LayouAdmin/lib/easing/easing.min.js"></script>
	<script src="~/LayouAdmin/lib/waypoints/waypoints.min.js"></script>
	<script src="~/LayouAdmin/lib/owlcarousel/owl.carousel.min.js"></script>
	<script src="~/LayouAdmin/lib/tempusdominus/js/moment.min.js"></script>
	<script src="~/LayouAdmin/lib/tempusdominus/js/moment-timezone.min.js"></script>
	<script src="~/LayouAdmin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- Template Javascript -->
	<script src="~/LayouAdmin/js/main.js"></script>
	<script>
		document.querySelector('.sidebar-toggler').addEventListener('click', function () {
			document.querySelector('.sidebar').classList.toggle('hidden');
		});
	</script>
	@RenderSection("Scripts", required: false)

</body>

</html>