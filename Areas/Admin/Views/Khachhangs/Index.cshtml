@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<web1.Models.Khachhang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Danh Sách Khách Hàng</h1>

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                    <tr>
                        <th>
                                    Tài Khoản
                        </th>
                        <th>
                                   Mật Khẩu
                        </th>
                        <th>
                                    Họ Tên
                        </th>
                        <th>
                                    Email
                        </th>
                        <th>
                                    Địa Chỉ
                        </th>
                        <th>
                                    Điện Thoại
                        </th>
                        <th>
                                    Ngày Sinh
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaiKhoanKh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailKh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChiKh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoaiKh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                <a class="btn btn-success" style="margin-bottom: 5px;" asp-action="Details" asp-route-id="@item.MaKh">Chi tiết</a><br>
@*                                     <a class="btn btn-danger" asp-action="DeleteConfirmed" asp-route-id="@item.MaKh">Xóa</a><br>
 *@                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>