@using web1.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Sanpham>

@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Danh mục sản phẩm</h1>

<p>
    <a asp-action="ThemSanPhamMoi">Create New</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên giày
            </th>
            <th>
                Size
            </th>
            <th>
                Ảnh bìa
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Thời gian bảo hành
            </th>
            <th>
                Ngày cập nhật
            </th>
            <th>
                Số lượng tồn
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenGiay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhBia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            
            <td>
                <a asp-action="SuaSanPham" asp-route-maSanPham="@item.MaGiay">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaGiay">Details</a> |
                <a asp-action="XoaSanPham" asp-route-maSanPham="@item.MaGiay">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("DanhMucSanPham", new{page=page}))
</div>
<!--Đổi cái đánh số trang khác-->