
@{
    ViewData["Title"] = "DangNhap";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập Quản Trị</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
            <h3 class="text-center mb-4">Đăng Nhập Quản Trị</h3>

            @using (Html.BeginForm("DangNhap", "Admin", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="username" class="form-label">Tài Khoản</label>
                    @Html.TextBox("TaiKhoan", null, new { @class = "form-control", placeholder = "Nhập tài khoản" })
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mật Khẩu</label>
                    @Html.Password("MatKhau", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


